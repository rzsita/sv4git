{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "go@1.26",
    "golangci-lint@2.9",
    "gh@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'devbox ready: go' $(go version | awk '{print $3}')"
    ],
    "scripts": {
      "build": ["make build"],
      "test":  ["make test"],
      "lint":  ["make lint"],
      "run":   ["make run"]
    }
  }
}
